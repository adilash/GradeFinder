<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME: JAYASANKAR"
            style="@style/Base.TextAppearance.AppCompat"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/syll_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SYLLABUS: CBSE"
            style="@style/Base.TextAppearance.AppCompat"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/class_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLASS : 10"
            style="@style/Base.TextAppearance.AppCompat"
            android:padding="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/sub1_show"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                style="@style/Base.TextAppearance.AppCompat"
                android:layout_height="wrap_content"
                android:text="SUBJECT 1: A"/>

            <TextView
                android:id="@+id/sub2_show"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/Base.TextAppearance.AppCompat"
                android:layout_height="wrap_content"
                android:text="SUBJECT 2: A"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/sub3_show"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                style="@style/Base.TextAppearance.AppCompat"
                android:layout_height="wrap_content"
                android:text="SUBJECT 3: A"/>

            <TextView
                android:id="@+id/sub4_show"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                style="@style/Base.TextAppearance.AppCompat"
                android:layout_height="wrap_content"
                android:text="SUBJECT 4: A"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/sub5_show"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                style="@style/Base.TextAppearance.AppCompat"
                android:layout_height="wrap_content"
                android:text="SUBJECT 5: A"/>

            <TextView
                android:id="@+id/totgrade_show"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                style="@style/Base.TextAppearance.AppCompat"
                android:layout_height="wrap_content"
                android:text="TOTAL GRADE: A"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>